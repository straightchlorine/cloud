directory: {{ music_library_path }}/music
library: {{ music_stack_home }}/config/beets/library.db
import:
    move: yes
    copy: no
    write: yes
    resume: ask
    incremental: yes
    quiet_fallback: skip
    timid: no
    log: {{ music_stack_home }}/config/beets/import.log
    # Better handling for YouTube downloads
    from_scratch: no
    group_albums: no

match:
    strong_rec_thresh: 0.10
    medium_rec_thresh: 0.25
    # More lenient matching for YouTube content
    ignored_media: ['Data CD', 'DVD-Video', 'Blu-ray']
    
per_disc_numbering: yes

paths:
    default: $albumartist/$album%aunique{}/$track $title
    singleton: YouTube Downloads/$artist - $title
    comp: Compilations/$album%aunique{}/$track $title
    # Special path for YouTube content
    albumtype:youtube: YouTube/$uploader/$title

plugins: fetchart embedart lyrics lastgenre scrub replaygain zero

fetchart:
    auto: yes
    cautious: yes
    cover_names: cover folder

embedart:
    auto: yes
    maxwidth: 1000

lyrics:
    auto: yes
    sources: genius google

lastgenre:
    auto: yes
    source: album

scrub:
    auto: yes

replaygain:
    auto: yes
    backend: ffmpeg

zero:
    auto: yes
    fields: comments
    update_database: yes