# YouTube Playlist Configuration
# Playlist URLs are configured via vault for security

{% if vault_youtube_playlists is defined and vault_youtube_playlists | length > 0 %}
# Primary playlist URL
PLAYLIST_URL="{{ vault_youtube_playlists[0] }}"
THOUGHT_PLAYLIST="{{ vault_youtube_playlists[0] }}"

# Additional playlists (if multiple are configured)
{% for playlist in vault_youtube_playlists %}
PLAYLIST_{{ loop.index }}="{{ playlist }}"
{% endfor %}
{% else %}
# No playlists configured in vault
# Add vault_youtube_playlists to your vault.yml file
# Example:
# vault_youtube_playlists:
#   - "https://www.youtube.com/playlist?list=PLrAXheLQNhHhF4a7OtZKzCzLF9LhzPm_H"
#   - "https://www.youtube.com/playlist?list=ANOTHER_PLAYLIST_ID"
{% endif %}

# Additional yt-dlp options (optional)
YT_DLP_EXTRA_ARGS="{{ vault_youtube_extra_args | default('') }}"

# Download quality preference
YOUTUBE_QUALITY="{{ vault_youtube_quality | default('best') }}"

# Maximum number of concurrent downloads
YOUTUBE_CONCURRENT="{{ vault_youtube_concurrent | default(10) }}"

# Enable/disable YouTube sync (true/false)
YOUTUBE_SYNC_ENABLED={{ youtube_sync_enabled | default(true) | lower }}

# Archive file location
YOUTUBE_ARCHIVE="{{ music_stack_home }}/config/youtube-archive.txt"

# Cache directory
YOUTUBE_CACHE="{{ music_stack_home }}/config/cache"