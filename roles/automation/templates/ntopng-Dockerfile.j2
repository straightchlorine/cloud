FROM debian:bookworm-slim

# Install dependencies
RUN apt-get update && \
    apt-get install -y wget curl gnupg2 software-properties-common && \
    apt-get clean

# Add ntop repository using newer method
RUN curl -fsSL http://packages.ntop.org/RaspberryPI/ntop.key | gpg --dearmor -o /usr/share/keyrings/ntop-archive-keyring.gpg && \
    echo "deb [signed-by=/usr/share/keyrings/ntop-archive-keyring.gpg] http://packages.ntop.org/RaspberryPI/ bookworm main" > /etc/apt/sources.list.d/ntop.list

# Install ntopng
RUN apt-get update && \
    apt-get install -y ntopng && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Create run script
RUN echo '#!/bin/bash' > /run.sh && \
    echo 'exec ntopng ${NTOP_CONFIG} "$@"' >> /run.sh && \
    chmod +x /run.sh

EXPOSE 3000 3001

ENTRYPOINT ["/run.sh"]