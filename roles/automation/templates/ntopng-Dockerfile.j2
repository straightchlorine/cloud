FROM debian:bookworm-slim

RUN apt-get update && \
    apt-get install -y wget gnupg lsb-release libelf1 && \
    wget http://packages.ntop.org/RaspberryPI/ -O /tmp/RaspberryPI && \
    wget http://packages.ntop.org/RaspberryPI/ntop.key -O - | apt-key add - && \
    echo "deb http://packages.ntop.org/RaspberryPI/ bookworm main" >> /etc/apt/sources.list.d/ntop.list && \
    apt-get clean && apt-get update && \
    apt-get install -y ntopng && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN echo '#!/bin/bash' > /run.sh && \
    echo 'exec ntopng ${NTOP_CONFIG} "$@"' >> /run.sh && \
    chmod +x /run.sh

EXPOSE 3000

ENTRYPOINT ["/run.sh"]