[Unit]
Description=Automation Stack Docker Compose
Requires=docker.service
After=docker.service
StartLimitIntervalSec=0

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ automation_stack_home }}
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
User={{ ansible_user }}
Group={{ ansible_user }}

[Install]
WantedBy=multi-user.target