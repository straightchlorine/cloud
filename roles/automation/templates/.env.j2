# Automation Stack Environment Variables
# Generated by Ansible - Do not edit manually

# Domain configuration
DOMAIN_NAME={{ domain_name }}
TRAEFIK_DOMAIN={{ subdomain_traefik }}.{{ domain_name }}
NEXTCLOUD_DOMAIN={{ subdomain_nextcloud }}.{{ domain_name }}
PAPERLESS_DOMAIN={{ subdomain_paperless }}.{{ domain_name }}

# Traefik configuration
TRAEFIK_WEB_PORT={{ traefik_web_port }}
TRAEFIK_WEBSECURE_PORT={{ traefik_websecure_port }}
TRAEFIK_DASHBOARD_PORT={{ traefik_dashboard_port }}

# Let's Encrypt
LETSENCRYPT_EMAIL={{ letsencrypt_email }}
LETSENCRYPT_STAGING={{ letsencrypt_staging | lower }}

# Data paths
AUTOMATION_DATA_PATH={{ automation_data_path }}

# Timezone
TZ={{ timezone | default('UTC') }}