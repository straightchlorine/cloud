---
# DNS Server (pi-dns)
vault_pihole_admin_password: "your-secure-admin-password"
vault_pihole_webpassword: "your-secure-web-password"

# Music Server (pi-music)
vault_hetzner_host: "uXXXXXX.your-storagebox.de"
vault_hetzner_username: "uXXXXXX"
vault_hetzner_ssh_key_path: "/home/media/.ssh/hetzner_storage_box"

vault_youtube_playlists:
  - "https://www.youtube.com/playlist?list=YOUR_PLAYLIST_ID"

# Automation Server (pi-automation)
vault_domain_name: "codextechnologies.org"
vault_letsencrypt_email: "admin@codextechnologies.org"
vault_traefik_basic_auth: "admin:$2y$10$2b2cu/nJVVeyWX8MpqNLPeOT6URz8Uu7UBJcv4C5rPWP9RCj4.4H6"

# CloudFlare DNS Challenge
vault_cloudflare_api_token: "your-cloudflare-api-token-here"

# InfluxDB Configuration
vault_influxdb_username: "admin"
vault_influxdb_password: "your-secure-influxdb-password"
vault_influxdb_org: "homelab"
vault_influxdb_bucket: "metrics"
vault_influxdb_admin_token: "your-influxdb-admin-token-here"

# Vaultwarden Configuration
vault_vaultwarden_admin_token: "your-vaultwarden-admin-token"
vault_vaultwarden_signups_allowed: "false"

# Alertmanager Configuration
vault_alertmanager_basic_auth: "admin:$2y$10$2b2cu/nJVVeyWX8MpqNLPeOT6URz8Uu7UBJcv4C5rPWP9RCj4.4H6"
vault_alertmanager_slack_webhook: "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Watchtower Configuration
vault_watchtower_schedule: "0 6 * * *"  # Daily at 6 AM
vault_watchtower_slack_webhook: "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
vault_watchtower_api_token: "your-watchtower-api-token"
vault_watchtower_basic_auth: "admin:$2y$10$2b2cu/nJVVeyWX8MpqNLPeOT6URz8Uu7UBJcv4C5rPWP9RCj4.4H6"

# Dozzle Configuration
vault_dozzle_username: "admin"
vault_dozzle_password: "your-dozzle-password"

